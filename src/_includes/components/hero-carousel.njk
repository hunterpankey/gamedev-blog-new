<div
  class="mb-16 {{ heroSettings.height.mobile or "
  h-1/1" }} sm:{{ heroSettings.height.desktop or heroSettings.height.mobile or "
  h-1/1" }}">
  <div
    class="h-full main-carousel"
    data-flickity='{"lazyLoad":"1", "wrapAround":true, "autoPlay": 8000, "draggable": false}'>
    {% for image in heroSettings.carousel.images %}
      <div
        class="w-full h-full {{ heroSettings.bg.imagePosition or 'bg-center' }} bg-no-repeat bg-cover carousel-cell"
        style="background-image: url(/assets/images/{{ image }});">
        {# Shared across hero components  #}
        {% include "components/hero-text-overlay.njk" %}</div>
    {% endfor %}
  </div>
</div>